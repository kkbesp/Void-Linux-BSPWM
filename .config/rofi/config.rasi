configuration {
  theme: "default.rasi";
  show-icons: true;
  icon-theme: "Qogir";
  font: "Clear Sans Bold 9.3";
  terminal: "st";
  modi: "drun,run,window";
  width: 40;
  lines: 8;
  columns: 1;
  bw: 7;
  location: 0;
  padding: 0;
  ssh-client: "ssh";
  ssh-command: "{terminal} -e {ssh-client} {host} [-p {port}]";
  run-command: "{cmd}";
  run-shell-command: "{terminal} -e {cmd}";
  window-command: "wmctrl -i -R {window}";
  sidebar-mode: true;
  line-margin: 10;
  separator-style: "none";
  hide-scrollbar: true;
  scrollbar-width: 0;
